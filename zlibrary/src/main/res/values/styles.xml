<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsContainerStyleBase">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LayoutClicableStyle" parent="SettingsContainerStyleBase">
        <item name="android:background">@drawable/button_settings_bg_selector</item>
    </style>

    <style name="TextAppearanceExtraExtraSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/TextAppearanceExtraExtraSmall</item>
    </style>

    <style name="TextAppearanceExtraSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/TextAppearanceExtraSmall</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/TextAppearanceSmall</item>
    </style>

    <style name="HintTextAppearance" parent="@style/TextAppearanceSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearanceMediumSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/TextAppearanceMediumSmall</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/TextAppearanceMedium</item>
    </style>

    <style name="TextAppearanceExtraLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/TextAppearanceExtraLarge</item>
    </style>

</resources>
